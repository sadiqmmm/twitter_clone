 <% provide(:title, 'Sign up') %>
 <h1>Sign up</h1>

 <div class="row">
 	<div class="span6 offset3">
 	<%= form_for(@user) do |f| %>

 	<%= render 'shared/error_message' %>
 	  
 	  <%= f.label :name %>
 	  <%= f.text_field :name %>

 	  <%= f.label :email %>
 	  <%= f.text_field :email %>

 	  <%= f.label :password %>
 	  <%= f.password_field :password %>

 	  <%= f.label :password_conformation, "Confirmation" %>
 	  <%= f.password_field :password_conformation %>

 	  <%= f.submit 	"Create my account", class: "btn btn-primary btn-large" %>


 	 <% end %>
 		
 	</div>
 </div>